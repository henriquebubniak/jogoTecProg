{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang arquivo de build ativo",
			"command": "g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"main.cpp",
				"Jogo.cpp",
				"Entidade.cpp",
				"Camarada.cpp",
				"Chefao.cpp",
				"Obstaculo.cpp",
				"Fase.cpp",
				"FaseFloresta.cpp",
				"Jogador.cpp",
				"Inimigo.cpp",
				"Personagem.cpp",
				"Projetil.cpp",
				"GerenciadorDeColisoes.cpp",
				"Menu.cpp",
				"-I",
				"/opt/homebrew/Cellar/sfml/2.5.1_1/include",
				"-o",
				"${fileDirname}/jogo",
				"-L", 
				"/opt/homebrew/Cellar/sfml/2.5.1_1/lib",
				"-lsfml-graphics",
				"-lsfml-window",
				"-lsfml-system"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compilador: /usr/bin/clang"
		}
	]
}